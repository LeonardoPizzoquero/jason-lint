{
  "name": "jason-lint",
  "displayName": "JASON Lint",
  "description": "Find duplicate object values of your JSON files",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeonardoPizzoquero/jason-lint"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onCommand:jason-lint.jasonLint",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "publisher": "Leonardo Pizzoquero",
  "contributes": {
    "commands": [
      {
        "command": "jason-lint.jasonLint",
        "title": "JASON Lint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
